import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Как вас зовут? ");
        String name = scanner.nextLine();
        String firstLetter = name.substring(0, 1).toUpperCase(); // первая буква имени в верхнем регистре
        String restOfName = name.substring(1).toLowerCase(); // остальные буквы имени в нижнем регистре
        String formattedName = firstLetter + restOfName; // форматированное имя
        System.out.println("Привет, " + formattedName + "!");
    }
}
